<mvc:View
	controllerName="data.capture.for.sap.controller.config.UnitTypeDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	
	<Page
		id="unittypedetails_page"
		titleAlignment="Center"
		showNavButton="true"
		navButtonPress="onNavBack">
		
		<headerContent>
			<Toolbar>
				<Button 
					id="unittypedetails_edit" 
					text="{i18n>Generic.button.edit}" 
					press="editPress"/>
				<Button 
					id="unittypedetails_save" 
					type="Emphasized" 
					text="{i18n>Generic.button.save}" 
					visible="false" 
					press="savePress"/>
				<Button 
					id="unittypedetails_cancel" 
					type="Reject"
					text="{i18n>Generic.button.cancel}" 
					visible="false" 
					press="cancelPress"/>
			</Toolbar>
		</headerContent>
		
	</Page>
	
</mvc:View>